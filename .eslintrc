{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false,
    "__NETLIFY_CONTEXT__": false,
    "__NETLIFY_BRANCH__": false
  },
  "rules": {
    "semi": ["error", "never"],
    "no-unused-expressions": "error",
    // The following rules are disabled since prettier covers them
    "quotes": 0,
    "eol-last": 0,
    "key-spacing": 0,
    "jsx-quotes": 0,
    "array-bracket-spacing": 0,
    "arrow-parens": 0,
    "comma-dangle": 0,
    "brace-style": 0,
    "curly": 0,
    "dot-location": 0,
    "indent": 0,
    "lines-around-comment": 0,
    "line-comment-position": 0,
    "max-len": 0,
    "multiline-ternary": 0,
    "newline-after-var": 0,
    "newline-per-chained-call": 0,
    "no-extra-parens": 0,
    "no-inline-comments": 0,
    "no-mixed-operators": 0,
    "object-curly-newline": 0,
    "object-curly-spacing": 0,
    "object-property-newline": 0,
    "padded-blocks": 0,
    "quote-props": 0,
    "space-before-function-paren": 0
  }
}
